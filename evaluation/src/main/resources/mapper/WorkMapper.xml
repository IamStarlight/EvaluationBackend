    <select id="getAllWorkInfoBySid" resultType="java.util.Map">
        SELET wid,cname,title,startTime,endTime,editStatus,evaStatus,url
        FROM homework,sc,course
        WHERE  homework.cid=sc.cid
        AND homework.cid=course.cid;
        AND sc.sid=#{sid}
    </select>
